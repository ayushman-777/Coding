set @rowindex:=-1;
select round(avg(n.lat_n), 4)
from
(select @rowindex:=@rowindex+1 as rowindex, station.lat_n as lat_n 
from station order by station.lat_n) 
as n 
where n.rowindex in (floor(@rowindex/2), ceil(@rowindex/2));	



set @r1=0, @r2=0, @r3=0, @r4=0;
select min(Doctor), min(Professor), min(Singer), min(Actor)
from(select case when Occupation='Doctor' then (@r1:=@r1+1)
            when Occupation='Professor' then (@r2:=@r2+1)
            when Occupation='Singer' then (@r3:=@r3+1)
            when Occupation='Actor' then (@r4:=@r4+1) end as RowNumber,
     case when Occupation='Doctor' then Name end as Doctor,
     case when Occupation='Professor' then Name end as Professor,
     case when Occupation='Singer' then Name end as Singer,
     case when Occupation='Actor' then Name end as Actor
from OCCUPATIONS order by Name) temp group by RowNumber;


SELECT IF(GRADE < 8, NULL, NAME), GRADE, MARKS
FROM STUDENTS JOIN GRADES
WHERE MARKS BETWEEN MIN_MARK AND MAX_MARK
ORDER BY GRADE DESC, NAME



                